{
  "[typescript]":{
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "**/platforms": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.css": {
      "when": "$(basename).scss"
    },
    "src/css": true
  },
  "search.exclude": {
    "{demo-ng,demo}/platforms/**": true,
    "{demo-ng,demo}/platforms/**/*": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "{demo-ng,demo}/platforms/**": true,
    "{demo-ng,demo}/platforms/**/*": true,
    "**/node_modules/**": true,
    "**/node_modules/**/*": true
  },
  "cSpell.words": [
    "Bitmask",
    "Flexbox",
    "Focusable",
    "Freiling",
    "Morten",
    "Sj√∏gren",
    "assistive",
    "bootstrapper",
    "ddfreiling",
    "downlevel",
    "fontscale",
    "fontscales",
    "globalevents",
    "gmail",
    "mabs",
    "prettierrc",
    "radiobutton",
    "sasswatch",
    "selectable",
    "toplevel",
    "tscwatch"
  ]
}
