{
  "[typescript]":{
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "**/platforms": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.css": {
      "when": "$(basename).scss"
    }
  },
  "cSpell.words": [
    "Bitmask",
    "Focusable",
    "fontscale",
    "fontscales",
    "globalevents",
    "radiobutton"
  ]
}
