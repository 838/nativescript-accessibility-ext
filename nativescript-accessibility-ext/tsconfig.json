{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "noLib": false,
        "lib": [
            "es2016"
        ],
        "sourceMap": false,
        "pretty": true,
        "noEmitHelpers": true,
        "noUnusedLocals": true,
        "inlineSourceMap": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true
    },
    "files": [
        "index.ts"
    ],
    "include": [
        "ui/**/*.ts",
        "utils/**/*.ts",
        "references.d.ts"
    ],
    "exclude": [
        "ui/**/*.d.ts",
        "utils/**/*.d.ts",
        "tests"
    ],
    "compileOnSave": false
}
