{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "noLib": false,
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": false,
    "pretty": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/tns-core-modules/*",
        "./node_modules/*"
      ]
    },
    "skipLibCheck": true
  },
  "files": [
    "index.ts"
  ],
  "include": [
    "ui/**/*.ts",
    "utils/**/*.ts",
    "references.d.ts"
  ],
  "exclude": [
    "tests"
  ],
  "compileOnSave": false
}
