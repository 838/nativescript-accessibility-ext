{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "commonjs",
        "noLib": false,
        "lib": [
            "es2016",
            "es2015.iterable"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "platforms",
        "app/main.aot.ts"
    ]
}